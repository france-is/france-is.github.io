import tkinter as tk

# Create the main window
root = tk.Tk()
root.title("Noto")
root.geometry("800x600")
root.configure(bg="white")

# Create the text editor frame
text_editor = tk.Frame(root, bg="white", bd=0, relief=tk.SUNKEN)
text_editor.place(relwidth=1, relheight=1)

# Create the text widget for the text editor frame
text = tk.Text(text_editor, bg="white", fg="black", font=("Helvetica", 12))
text.pack(side=tk.LEFT, fill=tk.BOTH, expand=True)

# Create the sidebar frame
sidebar = tk.Frame(root, bg="white", bd=0, relief=tk.SUNKEN)
sidebar.place(relwidth=0.2, relheight=1)

# Add the text formatting options to the sidebar
bold_button = tk.Button(sidebar, text="B", font=("Helvetica", 12, "bold"))
bold_button.pack(side=tk.TOP, fill=tk.X, pady=(10, 0))

italic_button = tk.Button(sidebar, text="I", font=("Helvetica", 12, "italic"))
italic_button.pack(side=tk.TOP, fill=tk.X, pady=(10, 0))

underline_button = tk.Button(sidebar, text="U", font=("Helvetica", 12, "underline"))
underline_button.pack(side=tk.TOP, fill=tk.X, pady=(10, 0))

# Add the ability to add or modify notes
def add_note():
    note_text = text.get(1.0, tk.END)
    # Add the note to the list of notes

add_note_button = tk.Button(sidebar, text="Add Note", command=add_note)
add_note_button.pack(side=tk.BOTTOM, fill=tk.X, pady=(10, 0))

# Start the main event loop
root.mainloop()
